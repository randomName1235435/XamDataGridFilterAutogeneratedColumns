<Window x:Class="XamDataGridFilterAutogeneratedColumns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamDataGridFilterAutogeneratedColumns"
        xmlns:igWPF="http://schemas.infragistics.com/xaml/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <igWPF:XamDataGrid Name="Grid"
                               DataSource="{Binding Items}"
                               IsGroupByAreaExpanded="False"
                               IsSynchronizedWithCurrentItem="False"
                               ScrollingMode="DeferredWithScrollTips">
            <igWPF:XamDataGrid.Resources>
                <Style TargetType="{x:Type igWPF:XamDataGrid}">
                    <Setter Property="local:XamDataGridHideInvalidColumnsBehavior.ValidColumns" 
                            Value="{Binding ValidColumns}" 
                            ></Setter>
                    <Setter Property="local:XamDataGridHideInvalidColumnsBehavior.InvalidColumns" 
                            Value="{Binding InvalidColumns}" 
                            ></Setter>
                </Style>
            </igWPF:XamDataGrid.Resources>
            <igWPF:XamDataGrid.FieldLayoutSettings>
                <igWPF:FieldLayoutSettings AllowAddNew="False"
                                               AllowDelete="False"
                                               AllowFieldMoving="No"
                                               AutoGenerateFields="true"
                                               FilterRecordLocation="OnTopFixed"
                                               HeaderPrefixAreaDisplayMode="FieldChooserButton" />
            </igWPF:XamDataGrid.FieldLayoutSettings>
            <igWPF:XamDataGrid.FieldSettings>
                <igWPF:FieldSettings AllowEdit="False"
                                         AllowGroupBy="True"
                                         AllowRecordFiltering="True"
                                         AllowSummaries="True"
                                         CellClickAction="SelectRecord"
                                         LabelClickAction="SortByOneFieldOnly"
                                         SummaryDisplayArea="TopFixed"
                                         SummaryUIType="MultiSelect" />
            </igWPF:XamDataGrid.FieldSettings>
        </igWPF:XamDataGrid>
    </Grid>
</Window>
